{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"noLib": false,
		"noImplicitAny": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"typeRoots": ["node_modules/@types", "types"],
		"paths": {
			"@auth/*": ["src/auth/*"],
			"@utils/*": ["src/shared/*"],
			"@models/*": ["src/models/*"],
			"@environments/*": ["src/environments/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"coverage",
		"document",
		"dist",
		"backup",
		"**/*.spec.ts"
	]
}
