{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"sourceMap": true,
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"noLib": false,
		"noImplicitAny": false,
		"outDir": "./dist",
		"baseUrl": "./",
		"typeRoots": ["node_modules/@types", "types"],
		"paths": {
			"@auth": ["src/auth"],
			"@common": ["src/common"],
			"@config": ["src/config"],
			"@environments": ["src/environments"],
			"@models": ["src/models"],
			"@shared": ["src/shared"],
			"@utils": ["src/utils"],
			"@validations": ["src/validations"]
		}
	},
	"include": ["src/**/*.ts"],
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"coverage",
		"document",
		"dist",
		"backup",
		"**/*.spec.ts"
	]
}
